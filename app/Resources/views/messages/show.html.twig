{% extends 'base.html.twig' %}

{% block body %}
    <h1>Messages</h1>

    <table>
        <tbody>
            <tr>
                <th>Content</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if message.createdAt %}{{ message.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Messagesid</th>
                <td>{{ message.messagesId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('messages_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('messages_edit', { 'id': message.messagesId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
